<h2>Forgot your password?</h2>

<div class="devise_form_container">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "input_field", autofocus: true, autocomplete: "email" %>
      </div>

      <div>
        <%= f.submit "Send me reset password instructions", class: 'send_reset_password_button' %>
      </div>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
