<h2>Log in</h2>

<div class="devise_form_container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="login_form">
      <div>
        <%= f.email_field :email, placeholder: "Email", class: "input_field", autofocus: true, autocomplete: "email" %>
      </div>

      <div>
        <%= f.password_field :password, placeholder: "Password", class: "input_field", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div>
        <%= f.submit "Log in", class: "login_button" %>
      </div>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
